<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResourcesActivity">

    <TextView
        android:id="@+id/resources_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Hotline / Careline Support"
        android:textColor="@color/white"
        android:background="@color/btn_pink"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: Click on phone number to copy to clipboard"
        android:textColor="@color/grey_pink"
        app:layout_constraintTop_toBottomOf="@id/resources_title"
        android:textAlignment="center"
        android:padding="12dp" />


    <ImageView
        android:id="@+id/img1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/befrienderspg"
        app:layout_constraintTop_toBottomOf="@id/msg1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name1"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="USM SES\nIntervention Counselling Services"
        app:layout_constraintTop_toBottomOf="@id/msg1"
        app:layout_constraintLeft_toRightOf="@id/img1"/>

    <TextView
        android:id="@+id/p1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name1"
        android:text="Phone: "
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/img1"/>

    <TextView
        android:id="@+id/pcopy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name1"
        app:layout_constraintLeft_toRightOf="@id/p1"
        android:text="014-5351100"
        android:textSize="16sp"
        android:textColor="@color/btn_pink"
        android:clickable="true"
        android:focusable="true"
        />


    <ImageView
        android:id="@+id/img2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/befrienderspg"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name2"
        android:text="Befrienders Penang"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintLeft_toRightOf="@id/img2"/>

    <TextView
        android:id="@+id/p2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/name2"
        app:layout_constraintLeft_toRightOf="@id/img2"/>

    <TextView
        android:id="@+id/pcopy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/btn_pink"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/name2"
        app:layout_constraintLeft_toRightOf="@id/p2"
        android:text="04-2815161"
        />


    <ImageView
        android:id="@+id/img3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        android:src="@drawable/wcc"/>

    <TextView
        android:id="@+id/name3"
        android:text="Women's Centre\nfor Change Penang"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        app:layout_constraintLeft_toRightOf="@id/img3"/>

    <TextView
        android:id="@+id/p3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/name3"
        app:layout_constraintLeft_toRightOf="@id/img3"/>

    <TextView
        android:id="@+id/pcopy3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/btn_pink"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/name3"
        app:layout_constraintLeft_toRightOf="@id/p3"
        android:text="04-2280342"
        />


    <ImageView
        android:id="@+id/img4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img3"
        android:src="@drawable/wcc"/>

    <TextView
        android:id="@+id/name4"
        android:text="Women's Centre\nfor Change Seberang Prai"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/img3"
        app:layout_constraintLeft_toRightOf="@id/img4"/>

    <TextView
        android:id="@+id/p4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/name4"
        app:layout_constraintLeft_toRightOf="@id/img4"/>

    <TextView
        android:id="@+id/pcopy4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/btn_pink"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/name4"
        app:layout_constraintLeft_toRightOf="@id/p4"
        android:text="04-3988340"
        />


    <ImageView
        android:id="@+id/img5"
        android:layout_width="90dp"
        android:layout_marginStart="10dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img4"
        android:src="@drawable/befrienderskl"/>

    <TextView
        android:id="@+id/name5"
        android:text="Befrienders Kuala Lumpur"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/img4"
        app:layout_constraintLeft_toRightOf="@id/img5"/>

    <TextView
        android:id="@+id/p5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/name5"
        app:layout_constraintLeft_toRightOf="@id/img5"/>

    <TextView
        android:id="@+id/pcopy5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/btn_pink"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/name5"
        app:layout_constraintLeft_toRightOf="@id/p5"
        android:text="03-76272929"
        />






</androidx.constraintlayout.widget.ConstraintLayout>

